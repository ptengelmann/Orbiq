// prisma/schema.prisma
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

/* ========= Auth ========= */
model User {
  id                   String      @id @default(auto()) @map("_id") @db.ObjectId
  name                 String?
  email                String?     @unique
  image                String?
  role                 Role        @default(CREATOR)
  onboardingCompleted  Boolean     @default(false)
  passwordHash         String?

  // Enhanced creator profile data from signup
  creatorType          String?     // youtuber, tiktoker, instagrammer, streamer, podcaster, multi
  agencyType           String?     // talent, marketing, media
  niches               String[]    // tech, fitness, beauty, lifestyle, business, etc.
  audienceSize         String?     // micro, macro, mega, celebrity

  accounts    Account[]
  sessions    Session[]
  memberships Membership[]
  brandKits   BrandKit[]  @relation("UserBrandKits")
  mediaKits   MediaKit[]  @relation("UserMediaKits")
  campaigns   Campaign[]  // ADDED: Missing relation field for Campaign

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  identifier String
  token      String   @unique
  expires    DateTime

  @@index([identifier])
}

/* ========= Multi-tenant ========= */
model Organization {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  type        OrgType       @default(CREATOR_TEAM)
  slug        String        @unique
  members     Membership[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Membership {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  userId         String        @db.ObjectId
  organizationId String        @db.ObjectId
  role           OrgRole       @default(MEMBER)
  createdAt      DateTime      @default(now())

  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  organization  Organization  @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
}

/* ========= Enhanced Brand Kit ========= */
model BrandKit {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(name: "UserBrandKits", fields: [userId], references: [id], onDelete: Cascade)

  // Basic brand info
  brandName   String?
  vibe        String?
  audience    String?
  tagline     String?
  
  // Visual identity
  palette     String[]    // Array of hex colors
  
  // Brand voice (stored as JSON)
  voice       Json?       // { attributes: [], dos: [], donts: [], tone: "", personality: [] }
  
  // Logo generation
  logoPrompts String[]    // AI prompts for logo generation
  
  // Enhanced AI-generated content (stored as JSON)
  contentTemplates     Json?    // Platform-specific content templates
  rateCardSuggestions  Json?    // Pricing suggestions based on audience size
  platformGuidelines   Json?    // Platform-specific brand guidelines

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([createdAt])
}

/* ========= Media Kit (public page) ========= */
model MediaKit {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(name: "UserMediaKits", fields: [userId], references: [id], onDelete: Cascade)

  handle      String   @unique  // FIXED: Removed duplicate @@index([handle])
  title       String?
  bio         String?
  website     String?
  links       Json?       // Social media links and other URLs
  brandKitId  String?     @db.ObjectId

  // Analytics and insights
  views       Int      @default(0)
  inquiries   Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  // REMOVED: @@index([handle]) - redundant with @unique
}

/* ========= Future: Campaigns & Partnerships ========= */
model Campaign {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  title       String
  brand       String?
  status      CampaignStatus @default(DRAFT)
  deliverables Json?   // Array of deliverable objects
  timeline    Json?    // Milestone and deadline objects
  compensation String? // Rate or compensation details

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

/* ========= Enums ========= */
enum Role {
  CREATOR
  AGENCY
  ADMIN
}

enum OrgRole {
  OWNER
  ADMIN
  MANAGER
  MEMBER
}

enum OrgType {
  AGENCY
  CREATOR_TEAM
}

enum CampaignStatus {
  DRAFT
  ACTIVE
  IN_REVIEW
  COMPLETED
  CANCELLED
}